<h3>予定一覧</h3>
<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th> 
      <th>編集</th> 
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start.strftime('%Y/%m/%d') %></td>
        <td><%= task.end.strftime('%Y/%m/%d') %></td>
        <td><%= task.allday ? "○" : "" %></td>
        <td><%= task.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細", task %></td>
        <td><%= link_to "編集", [:edit, task] %></td>
        <td><%= link_to "削除", task, method: :delete, data: { confirm: "予定を削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tbody> 
      <tr>
        <td>予定合計: <%= @tasks.count %>件</td>
        <td>本日の日付: <%= Date.today %></td>
      </tr>
  </tbody>
</table>

<p><%= link_to "新規追加", :new_task %></p>
